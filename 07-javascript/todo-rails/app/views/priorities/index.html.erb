<h2>Priorities</h2>
<ul id="priorities">
  <% @priorities.each do |priority| %>
    <li>
      <span class="name"><%= priority.name %></span>
      <span class="invisible color"><%= priority.color %></span>
      <span class="invisible value"><%= priority.value %></span>
      <span class="invisible id"><%= priority.id %></span>
    </li>
  <% end %>
</ul>

<button id="new_priority" class="btn btn-primary">New priority</button>

<div class="row new-priority-form invisible">
  <div class="col-md-4">
    <form>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :color %>
        <%= text_field_tag :color, '#ffffff', :type => 'color' %>
      </div>

      <div class="form-group">
        <%= label_tag :value %>
        <%= select_tag(:value, options_for_select( (1..10) )) %>
      </div>

      <%= hidden_field_tag :priority_id %>

      <button id="create_priority" class="btn btn-success">
        Create priority
      </button>
      <button id="cancel_priority" class="btn btn-warning">
        Cancel priority
      </button>

    </form>
  </div>
</div>
